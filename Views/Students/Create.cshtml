@model StudentManagementSystem.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1 style="color: black;">Add New Student</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table table-bordered table-hover table-responsive-lg" style="background-color: white; color: black;">
                <tr>
                    <th class="col-sm-2">
                        <label asp-for="Name" class="control-label"></label>
                    </th>
                    <td class="col-sm-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </td>
                </tr>

                <tr>
                    <th class="col-sm-2">
                        <label asp-for="StudentId" class="control-label"></label>
                    </th>
                    <td class="col-sm-10">
                        <input asp-for="StudentId" class="form-control" />
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </td>
                </tr>

                <tr>
                    <th class="col-sm-2">
                        <label asp-for="Class" class="control-label"></label>
                    </th>
                    <td class="col-sm-10">
                        <select asp-for="Class" class="form-control">
                            <option value="Class A">Class A</option>
                            <option value="Class B">Class B</option>
                            <option value="Class C">Class C</option>
                        </select>
                        <span asp-validation-for="Class" class="text-danger"></span>
                    </td>
                </tr>
            </table>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
