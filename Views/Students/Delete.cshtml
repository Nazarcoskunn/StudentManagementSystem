@model StudentManagementSystem.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1 style="color: black;">Delete Student</h1>
<h3>Are you sure you want to delete this?</h3>

<hr />
<div class="row">
    <table class="table table-bordered table-hover table-responsive-lg" style="background-color: white; color: black;">
        <tr>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>

        <tr>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.StudentId)
            </td>
        </tr>

        <tr>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.Class)
            </td>
        </tr>
    </table>
</div>

<div class="row p-3">
    <div class="form-group">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger float-end">Delete Student</button>
        </form>
        <a class="btn btn-warning float-start" asp-action="Index">Back to List</a>
    </div>
</div>
